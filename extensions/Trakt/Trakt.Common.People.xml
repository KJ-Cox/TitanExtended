<window>
  <controls>
    <control>
      <description>Avatar</description>
      <type>image</type>
      <id>1</id>
      <posX>121</posX>
      <posY>256</posY>
      <height>380</height>
      <width>380</width>
      <keepaspectratio>yes</keepaspectratio>
      <zoom>yes</zoom>
      <texture>#selectedthumb</texture>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control Style="InfoLabel">
      <description>Name</description>
      <type>label</type>
      <label>#Trakt.Person.Name</label>
      <id>0</id>
      <posX>566</posX>
      <posY>252</posY>
      <font>font14</font>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
    </control>
    <control Style="InfoLabel">
      <description>Birthplace label</description>
      <type>label</type>
      <label>#Trakt.Translation.Born.Label</label>
      <id>0</id>
      <width>260</width>
      <posX>566</posX>
      <posY>308</posY>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
      <visible>!string.equals(#Trakt.User.FullName,N/A)</visible>
    </control>
    <control Style="InfoValueSmall">
      <description>Birthplace value</description>
      <type>fadelabel</type>
      <label>#Trakt.Person.Birthplace</label>
      <id>0</id>
      <width>250</width>
      <posX>838</posX>
      <posY>308</posY>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
      <visible>!string.equals(#Trakt.User.FullName,N/A)</visible>
    </control>
    <control Style="InfoLabel">
      <description>Birthday label</description>
      <type>label</type>
      <label>#Trakt.Translation.Birthday.Label</label>
      <id>0</id>
      <width>260</width>
      <posX>566</posX>
      <posY>346</posY>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
      <visible>!string.equals(#Trakt.User.Gender,N/A)</visible>
    </control>
    <control Style="InfoValueSmall">
      <description>Birthday value</description>
      <type>fadelabel</type>
      <label>#Trakt.Person.Birthday</label>
      <id>0</id>
      <width>250</width>
      <posX>838</posX>
      <posY>346</posY>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
      <visible>!string.equals(#Trakt.User.Gender,N/A)</visible>
    </control>
    <control>
      <description>User About</description>
      <type>textboxscrollup</type>
      <id>0</id>
		  <posX>568</posX>
		  <posY>578</posY>
		  <width>525</width>
		  <height>480</height>
		  <lineSpacing>0.92</lineSpacing>
      <label>#Trakt.Person.Biography</label>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
      <animation effect="fade" time="250" delay="0">WindowOpen</animation>
      <visible>!string.equals(#Trakt.User.About,)+!string.equals(#Trakt.User.About,N/A)</visible>
    </control>
  </controls>
</window>